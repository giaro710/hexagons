<div class="main-container-smaller">
  <div class="row">
    <div class="col-12">
      <h2 class="form-title title-shadow">Create a new hexagon</h2>

      <%= simple_form_for [@path, @hexagon] do |f| %>

        <div class="field">
          <%= f.input :title %>
        </div>
        <div class="field">
          <%= f.input :date %>
        </div>
        <div class="field">
          <%= f.input :short_description %>
        </div>

        <div class="field">
          <%= f.label :long_content %>
          <%= f.rich_text_area :long_content, class: "editor-box" %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Create", class: "button-full mt-4" %>
        </div>

      <% end %>

      <div class="mt-3">
        <%= link_to "Back", path_path(@path), class: "button-empty" %>
      </div>

    </div>
  </div>
</div>

