<div class="container">
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">
      <h2>Create a new hexagon</h2>

      <%= simple_form_for [@path, @hexagon] do |f| %>

        <div class="field">
          <%= f.input :title %>
        </div>
        <div class="field">
          <%= f.input :date %>
        </div>
        <div class="field">
          <%= f.input :short_description %>
        </div>

        <div class="field">
          <%= f.label :long_content %>
          <%= f.rich_text_area :long_content, class: "editor-box" %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Create", class: "btn btn-primary mt-3" %>
        </div>

      <% end %>
    </div>
  </div>
</div>

