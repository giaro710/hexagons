<div class="container">
  <div class="row">
    <div class="col-sm-4 col-sm-offset-4">
      <h2>Modify the hexagon</h2>

      <%= simple_form_for [@path, @hexagon] do |f| %>

        <div class="form-inputs">

          <div class="form-group">
            <%= f.input :title %>
          </div>
          <div class="form-group">
            <%= f.input :date %>
          </div>
          <div class="form-group">
            <%= f.input :short_description %>
          </div>
          <div class="form-group">
            <%= f.input :long_content %>
          </div>

        </div>

        <div class="form-actions">
          <%= f.button :submit, "Modify" %>
        </div>

      <% end %>
    </div>
  </div>
</div>
