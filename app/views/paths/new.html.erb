<div class="container">
  <h2>Change your path name</h2>

  <%= simple_form_for(@path) do |f| %>
    <div class="form-inputs">
      <%= f.input :name %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Create", class: "btn btn-primary mt-3" %>
    </div>
  <% end %>

  <%= link_to "< Back", path_path(@path)  %>
</div>
