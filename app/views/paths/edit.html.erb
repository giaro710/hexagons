<div class="main-container-smaller centered">

  <div class="form-small-box">
    <h2 class="form-title title-shadow">Change the path name</h2>

    <%= simple_form_for(@path) do |f| %>
      <div class="form-inputs">
        <%= f.input :name %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Update", class: "button-full my-3" %>
      </div>
    <% end %>
  </div>
</div>
